import HashValue from "../../../playground/components/hash-value.marko";
import * as tagsTranslator from "@marko/runtime-tags/translator";

<HashValue/files=[
  {
    name: "index.marko",
    path: "/tags/index.marko",
    content:
      "<let/count=0/>\n<button onClick() { count++ }>\n  ${count}\n</button>",
  },
]/>
<repl
  getCompilerOptions() {
    return {
      translator: tagsTranslator,
      optimize: false,
    };
  }
  files:=files
/>
